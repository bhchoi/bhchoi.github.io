        <span class="n">input_ids</span><span class="p">,</span> <span class="n">attention_mask</span><span class="p">,</span> <span class="n">token_type_ids</span><span class="p">,</span> <span class="n">slot_label_ids</span> <span class="o">=</span> <span class="n">batch</span>

